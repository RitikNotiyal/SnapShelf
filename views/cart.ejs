<%- include('./partials/header') %>
<div class="w-full min-h-screen flex items-start px-4 md:px-20 py-10 gap-10">

<!-- LEFT: Product List -->
<div class="w-full md:w-[70%] rounded-md overflow-hidden space-y-8">
<% if (!userCart || userCart.cart.length === 0) { %>
    <div class="w-full h-80 bg-gray-100 flex items-center justify-center rounded-md">
        <h2 class="text-xl text-gray-600">Your cart is empty</h2>
    </div>
<% } else { %>
    <% userCart.cart.forEach(function(item) { %>
        <% const product = item.productId; %>
        <% const itemTotal = (product.discountedPrice * item.quantity).toFixed(2); %>
        
        <div class="w-full border rounded-md shadow-sm">
            <div class="w-full h-60 md:h-80 flex items-center justify-center bg-gray-50">
                <img src="data:image/jpeg;base64,<%= product.image.toString('base64') %>" 
                     alt="<%= product.name %>" 
                     class="h-full object-contain max-w-full" />
            </div>
            <div class="w-full flex justify-between items-center px-5 py-4">
                <h3 class="text-lg md:text-2xl font-medium"><%= product.name %></h3>
                <div class="flex items-center gap-3">
                    <button class="w-8 h-8 bg-gray-200 hover:bg-gray-300 flex rounded-full items-center justify-center transition-colors">
                        <i class="ri-subtract-line text-sm"></i>
                    </button>
                    <div class="px-3 py-1 rounded-md bg-gray-100 text-black font-medium min-w-[40px] text-center">
                        <%= item.quantity.toString().padStart(2, '0') %>
                    </div>
                    <button class="w-8 h-8 bg-gray-200 hover:bg-gray-300 flex rounded-full items-center justify-center transition-colors">
                        <i class="ri-add-line text-sm"></i>
                    </button>
                </div>
            </div>
            <div class="flex items-center justify-between px-5 py-3 bg-gray-50 border-t">
                <h4 class="text-base md:text-lg">Net Total</h4>
                <h2 class="text-base md:text-lg font-semibold">₹ <%= itemTotal %></h2>
            </div>
        </div>
    <% }); %>
<% } %>
</div>

<!-- RIGHT: Price Breakdown -->
<% if (userCart && userCart.cart.length > 0) { %>
<div class="w-full md:w-[30%] bg-white border rounded-md shadow-sm p-6 h-fit sticky top-10">
    <h3 class="text-lg font-semibold mb-4 border-b pb-2">Price Details</h3>
    
    <div class="space-y-3">
        <div class="flex justify-between">
            <h4 class="text-gray-600">Total MRP</h4>
            <h4>₹ <%= totalMRP %></h4>
        </div>
        <div class="flex justify-between">
            <h4 class="text-gray-600">Discount on MRP</h4>
            <h4 class="text-red-500">– ₹ <%= totalDiscount %></h4>
        </div>
        <div class="flex justify-between">
            <h4 class="text-gray-600">Platform Fee</h4>
            <h4>₹ <%= platformFee %></h4>
        </div>
        <div class="flex justify-between">
            <h4 class="text-gray-600">Shipping Fee</h4>
            <h4 class="text-green-600">FREE</h4>
        </div>
    </div>

    <div class="w-full h-[1px] bg-gray-300 my-4"></div>

    <div class="flex justify-between items-center">
        <h3 class="text-lg font-semibold">Total Amount</h3>
        <h3 class="font-bold text-lg text-green-600">₹ <%= totalAmount %></h3>
    </div>
    
    <button class="w-full bg-blue-600 hover:bg-blue-700 text-white py-3 rounded-md mt-6 font-medium transition-colors">
        Proceed to Checkout
    </button>
</div>
<% } %>

</div>
<%- include('./partials/footer') %>